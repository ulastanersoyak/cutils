#!/bin/sh

# Get the directory where the hook is located
HOOK_DIR="$(cd "$(dirname "$0")" && pwd)"
REPO_ROOT="$(git rev-parse --show-toplevel)"

# Check if clang-format is installed
if ! command -v clang-format >/dev/null 2>&1; then
    echo "Error: clang-format is not installed"
    echo "Please install clang-format to use this hook"
    exit 1
fi

# Get list of staged C files
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACMR | grep -E '\.(c|h)$')

if [ -z "$STAGED_FILES" ]; then
    echo "No C files staged for commit"
    exit 0
fi

echo "Formatting staged C files..."

# Format each staged C file
for FILE in $STAGED_FILES; do
    if [ -f "$FILE" ]; then
        echo "Formatting $FILE"
        clang-format -i "$FILE"
        git add "$FILE"
    fi
done

echo "Formatting complete"
exit 0 